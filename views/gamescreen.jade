script(src='/javascripts/swfobject.js')
script
	function getURLParam( name )
		{
			name = name.replace(/[\[]/,"\\\[").replace(/[\]]/,"\\\]");
			var regexS = "[\\?&]"+name+"=([^&#]*)";
			var regex = new RegExp( regexS );
			var results = regex.exec( window.location.href );
			if( results == null )
				return "";
			else
				return results[1];
		}

		var serverurl = getURLParam("domain");
		if( serverurl == "" ){
			serverurl = "localhost:3000";
		}

		var flashvars = {
			serverurl:serverurl
		};

		var params = {
			menu: "false",
			scale: "noScale",
			allowFullscreen: "true",
			allowScriptAccess: "always",
			bgcolor: "#000000"
		};
		var attributes = {
			id:"TripleCheeseFlashClient"
		};
		swfobject.embedSWF("/TripleCheese.swf", "altContent", "100%", "100%", "10.0.0", "expressInstall.swf", flashvars, params, attributes);

#altContent
	h1 #{title}
	p Alternative Content
	p
		a(href='http://www.adobe.com/go/getflashplayer')
			img(src='http://www.adobe.com/images/shared/download_buttons/get_flash_player.gif')
